%dl.playlist-track
  - skip ||= {}
  - if playlist_track.played and not skip[:played]
    %dt Played at
    %dd= playlist_track.played.utc.strftime('%H:%M')
  - unless skip[:track]
    %dt Track
    %dd
      %a{:href => r("/track/#{playlist_track.track.id}/")}
        = playlist_track.track.name
  - unless skip[:artists]
    %dt Artists
    - playlist_track.artists.each do |pta|
      %dd
        %a{:href => r("/artist/#{pta.id}/")}= pta.name
  - if playlist_track.album.name and not skip[:album]
    %dt Album
    %dd
      %a{:href => r("/album/#{playlist_track.album.id}/")}
        = playlist_track.album.name
  - if playlist_track.composer.name and not skip[:composer]
    %dt Composer
    %dd
      %a{:href => r("/composer/#{playlist_track.composer.id}/")}
        = playlist_track.composer.name
  - unless skip[:episode]
    %dt Episode
    %dd
      %a{:href => r("/episode/#{playlist_track.episode.slug}/")}
        = playlist_track.episode.title_date
